{
    // See http://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "args": ["run", "build"],
            "isBuildCommand": true
        },
        {
            "taskName": "serve",
            "args": ["run", "serve"]
        },
        {
            "taskName": "devtools",
            "args": ["run", "devtools"]
        },
        {
            "taskName": "start:dev",
            "args": ["run", "start:dev"]
        },
        {
            "taskName": "start",
            "args": ["start"],
            "isTestCommand": true
        }
    ]
}